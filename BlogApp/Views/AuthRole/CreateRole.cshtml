@model BlogApp.Models.AuthRoleController.CreateRoleViewModel

<form asp-action="CreateRole" asp-controller="AuthRole" method="post">
    <div asp-validation-summary="All" class="text-danger p-2"></div>
    <div class="row p-2">
        <label asp-for="@Model.Name" class="col-md-3"></label>
       <div class="col-md-9">
            <input asp-for="@Model.Name" class="form-control" />
       </div>
    </div>
