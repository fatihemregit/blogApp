@model List<BlogApp.Models.AuthRoleController.SetRoleViewModel>
<h1>@TempData["userEmail"]  İçin Rol İşlemi</h1>
<hr />
<form asp-action="SetRole" asp-controller="AuthRole" asp-route-userEmail="@TempData["userEmail"]" method="post">
	<table class="table">
		<thead>
			<tr>
				<th>Ayarla</th>
				<th>Rol Adı</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.Count(); i++)
			{
				<tr>
					<td>
						<input type="checkbox" class="form-check-input" asp-for="@Model[i].State" />
					</td>
					<td>@Model[i].RoleName</td>
					<td><input type="hidden" asp-for="@Model[i].RoleName" /></td>
				</tr>
			}
		</tbody>
	</table>
	<button type="submit" class="btn btn-primary">Set Role</button>
</form>



