@model BlogApp.Models.BlogController.CreateBlogViewModel

<h1>Yeni Blog Yazısı</h1>
<hr />
<form asp-action="CreateBlog" asp-controller="Blog" method="post">
    <div class="row">
        <label asp-for="Title" class="col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="Title" class="form-control"/>
        </div>
    </div>
    <label asp-for="Content" class="pb-2"></label>
    <br>
    <br>
    <textarea asp-for="Content" class="pb-2" id="mytextarea">
    </textarea>
    <input type="hidden" asp-for="WriterId" value="@TempData["writerId"]" />
    <button class="btn btn-primary p-2" type="submit">Yayınla</button>
</form>